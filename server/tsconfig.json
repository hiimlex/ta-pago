{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"baseUrl": "./src",
		"paths": {
			"types/*": ["./types/*"],
			"@core/*": ["./core/*"],
			"@modules/*": ["./modules/*"],
			"@utils/*": ["./utils/*"],
			"@config/*": ["./config/*"],
			"@test/*": ["./test/*"]
		}
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "dist"]
}
